{% macro getPost(postTitle, postText, postImage) %}

<div class="col-12 mb-4">
    <div class="row">
        <div class="col-8">
            <h1 class="h4 mb-2">{{ postTitle }}</h1>
            <p class="mb-0">{{ postText }}</p>
        </div>
        <div class="col-4">
            <img class="img-fluid" src="https://source.unsplash.com/100x100/?{{ postImage }}" alt="Random unsplash image.">
        </div>
    </div>
</div>

{% endmacro %}