{% import "macros/_feed-post.njk" as macroPost %}

<div class="row">

  <h2 class="col-12 h3 mt-4 mb-5">

    {% if title %}
        {{ title }}
    {% else %}
        Meistgesehen
    {% endif %}

  </h2>

  {% for post in posts %}
      {{ 
        macroPost.getPost(
        post.postTitle, 
        post.postText
        ) 
      }}
  {% endfor %}

</div>