{% set navsMain = [
    { title: 'Home', url: 'index.html', state: 'home' },
    { title: 'Idee teilen', url: 'neue-idee.html', state: 'neue-idee' },
    { title: 'Heisse Ideen', url: 'heisse-idee.html', state: 'heisse-idee' }
] %}

<header id="header">
  <nav id="nav-bar" class="navbar nav-main navbar-light navbar-expand-sm">
    <a class="navbar-brand" href="index.html">
      <img src="img/OSI_Logo.png" alt="OSI Logo">
    </a>
    <div class="nav-item nav-item-avatar flex-grow-0">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link avatar dropdown-toggle" data-toggle="dropdown">
            <img class="rounded-circle" src="img/Profilbild.jpg" alt="User avatar">
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="profile.html">Dashboard</a>
            <a class="dropdown-item" href="profile.html">Profil bearbeiten</a>
            <a class="dropdown-item" href="home.html">Log Out</a>
          </div>
        </li>   
      </ul>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse nav-item-menu flex-grow-0 text-center" id="collapsibleNavbar">
      <ul class="navbar-nav">

      {% for nav in navsMain %}
            {% if page == nav.state %}
            <li class="nav-item active">
            {% else %}
            <li>
            {% endif %}
                <a class="nav-link nav-link-text text-body" href="{{ nav.url }}">{{ nav.title }}</a>
            </li class="nav-item">
        {% endfor %}

      </ul>
    </div>
  </nav>
</header>