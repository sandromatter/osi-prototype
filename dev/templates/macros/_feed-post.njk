{% macro getPost(postTitle, postText, postUrl) %}

<div class="col-12 mb-4">
    <div class="row">
        <div class="col-8">         
                <h3 class="h4 mb-2">
                    <a class="text-body" href="device-smarterer.html">{{ postTitle }}</a>
                </h3>
            <p class="mb-0">{{ postText }}</p>
        </div>
        <div class="col-4 d-flex justify-content-end">
            <a class="text-body" href="device-smarterer.html">
                <img class="img-fluid" src="https://source.unsplash.com/100x100/?{{ postUrl }}" alt="Random unsplash image.">
            </a>
        </div>
    </div>
</div>

{% endmacro %}